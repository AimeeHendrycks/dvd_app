<li>
  <a href='#' id ='search-dvds' title='Search All DVDs'>
    <i class="fa fa-search fa-lg" style='margin:0'></i>
  </a>
</li>
{{#each letters}}
  <li><a class="letter" id="{{this}}" href="#">{{ this }}</a></li>
{{/each}}
           
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> &#9660;</a>
    <ul class="dropdown-menu" style='height:180px; overflow:hidden; overflow-y:scroll; list-style-type:none; border:2px solid black'>
        {{#each digits}}
        <li>
            <a href="#" id = {{ this }} class='letter' style='text-align:center'>{{ this }}</a>
        </li>
        {{/each}}
        {{#each punctuation}}
        <li>
            <a href="#" id = {{ this }} class='letter' style='text-align:center'>{{ this }}</a>
        </li>
        {{/each}}
    </ul>
</li>